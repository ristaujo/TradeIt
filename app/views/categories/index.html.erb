<div class="container">
  <div class="leftbar">
    <a href="#"><h1>TradeIt</h1></a>
    <ul>
      <%= link_to 'post to classifieds', new_listing_path %>
      <% if user_signed_in? %>
        <li><%= link_to 'my account', edit_user_registration_path %></li>
        <li><%= link_to 'log out', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'sign in', new_user_session_path %></li>
        <li><%= link_to 'sign up', new_user_registration_path %></li>
      <% end %>

    </ul>
      <p>search TradeIt</p>
      <%= form_tag search_listings_path, method: :get do |f| %>
        <%= text_field_tag :search, nil, placeholder: 'search' %>
        <%= text_field_tag :location, nil, placeholder: 'near' %>
        <%= select_tag :category, options_for_select(Category.all.map {|c| [c.name, c.id]}) %>
        <%= submit_tag '>' %>
      <% end %>
      
  </div>
  <div class="center-column" >
    <div class="center-one">
      <table>
        <tr>
          <th class="table-header"><%= link_to 'household', category_path(@household) %></th>
        </tr>
        <tr>
          <td>
            <% @household.subcategories.each do |subcategory| %> 
            <ul class="left-list">
              <li><%= link_to subcategory.name, category_subcategory_path(@household, subcategory) %></li>
             
            </ul>
            <% end %>
          </td>
        </tr>
      </table>
      <table>
        <tr>
          <th class="table-header"><%= link_to 'food', category_path(@food) %></th>
